OPENAI_API_KEY=sk-your-openai-api-key-here
DATABASE_URL=sqlite:///./stepwise.db
DEBUG=true
LOG_LEVEL=INFO

# Security Configuration (optional - recommended for production)
# API access key for stats and reports endpoints
# If not set, these endpoints will be accessible without authentication
API_ACCESS_KEY=your-secure-api-key-here

# Email Configuration (optional)
# EMAIL_PROVIDER: "sendgrid" for production, "console" for development (default: console)
# If using SendGrid, set SENDGRID_API_KEY
# EMAIL_FROM: Sender email address for outgoing emails
EMAIL_PROVIDER=console
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
EMAIL_FROM=noreply@stepwise.example.com

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRO_PRICE_ID=price_your_pro_price_id_here
STRIPE_FAMILY_PRICE_ID=price_your_family_price_id_here
